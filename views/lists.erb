<div id="content">
  <% for mode in @modes %>

    <div id="<%= mode.title.downcase %>" class="droppable ui-widget-header mode">
      <p>message</p>
        <% for note in mode.notes  %>
      
          <div class="note draggable ui-widget-content"> 
            <%= note.title %> : <%= note.description %> 
          </div>
       
        <% end %>
        <div class="note-placeholder">
        </div>
      </div>

  <% end %>
</div>

