<div id="content">
  <% for mode in @modes %>

    <div id="<%= mode.title %>" class="droppable ui-widget-header mode">
      <h2><%= mode.title.capitalize %></h2>
        <% for note in mode.notes  %>
      
          <div id="<%= note.id %>" class="note draggable ui-widget-content"> 
            <%= note.title %> : <%= note.description %> 
          </div>
       
        <% end %>
        <div class="note-placeholder">
        </div>
      </div>

  <% end %>
</div>

